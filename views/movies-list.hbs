<div class="movies-container">
  <div class="movies-grid">
    <div class="movies-header">
      <h2>Ironhack Cinema</h2>
      <h3>Click on the movie to see showtimes!</h3>
    </div>
      {{#each response}}
        <div class="movie-card">
          <img src="{{this.image}}" alt="{{this.title}} image">
          <h4>{{this.title}}</h4>
          <a href="/movie-detail/{{this._id}}">See more</a>
        </div>
      {{/each}}
  </div>
</div>


